@model assingment2.Models.Courses

@{
    Layout = null;
}
@{
    ViewBag.Title = "Home Page";
} @Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")
@Scripts.Render("~/bundles/jquery")
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>
    @{
        ViewBag.Title = "Home Page";
    }

    <div class="container">
        <nav class="navbar navbar-expand-sm navbar-dark fixed-top bg-dark">



            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;    @Html.ActionLink("Information and Technology College ", "Index", "Home", new { area = "" }, new
{ @class = "navbar-brand" })
        </nav>
        &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;

        <div>
            <h4>Courses</h4>
            <hr />
            <table class="table table-striped">

                <thead>
                    <tr>
                        <th scope="col"> @Html.DisplayNameFor(model => model.CourseId)</th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.CourseFee)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.CourseName)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">
                            @Html.DisplayFor(model => model.CourseId)
                        </th>


                        <td>
                            @Html.DisplayFor(model => model.CourseFee)
                        </td>


                        <td>
                            @Html.DisplayFor(model => model.CourseName)
                        </td>

                    </tr>
                </tbody>
            </table>
            <h2 style="margin-top:80px">Course Information</h2>
            <h4>This course will enable you to explore a range of vocational areas of study. These will include Business, ICT and Employability skills. Studying Entry level 3 provides an introduction to the skills, qualities and knowledge that will be required for employment and opportunities for progression onto a level 1 course.</h4>
        </div>
        <div style="margin-top:20px">
            <div class="row">
                <div class="col">
                    <img src="~/1.jpg" class="img-thumbnail" />

                </div>
                <div class="col">
                    <img src="~/2.jpg" class="img-thumbnail" />
                </div>
                <div class="col">
                    <img src="~/3.jpg" class="img-thumbnail" />
                </div>
            </div>

            <a style="margin-top:100px" class="btn btn-primary" href="~/applyhere.html" role="button">Apply Here</a>
        </div>
        <p style="margin-top:20px">
            @Html.ActionLink("Check Modules", "../Modules/Index") |
            @Html.ActionLink("Back to List", "Index")

        </p>
    </div>
    <div class="container body-content" style="margin-top:600px">

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Information And Technology College</p>
        </footer>
    </div>
</body>
</html>
